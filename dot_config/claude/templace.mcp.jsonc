// Claude Desktop の場合は `$HOME/Library/Application\ Support/Claude/claude_desktop_config.json` を編集
{
    "mcpServers": {
        // Deepwiki
        // GitHub のリポジトリのコードについて、AI に質問できる。
        "deepwiki": {
            "type": "http",
            "url": "https://mcp.deepwiki.com/mcp"
        },
        // Context7
        // プロンプトに use context7 と書くことで、最新ライブラリの情報を参照できる。
        "Context7": {
            "command": "bunx",
            "args": ["-y", "@upstash/context7-mcp@latest"]
        },
        // Serena
        // claude mcp add serena -- uvx --from git+https://github.com/oraios/serena serena start-mcp-server --context ide-assistant --project $(pwd)
        "serena": {
            "type": "stdio",
            "command": "uvx",
            "args": [
                "--from",
                "git+https://github.com/oraios/serena",
                "serena",
                "start-mcp-server",
                "--context",
                "ide-assistant",
                "--project",
                "$(pwd)"
            ],
            "env": {}
        },
        // grep
        "grep": {
            "type": "http",
            "url": "https://mcp.grep.app"
        },
        // GitHub
        // GitHub のリポジトリの操作ができる。PRの作成や、Issue の管理など。
        "github": {
            "type": "http",
            "url": "https://api.githubcopilot.com/mcp/",
            "headers": {
                "Authorization": "Bearer {{github_token}}"
            }
        },
        // Figma
        // Figma Desktop で MCP サーバーを起動しておく必要がある。
        "Figma": {
            "type": "sse",
            "url": "http://127.0.0.1:3845/sse"
        },
        // Time
        // 現在の時刻を取得する。
        "time": {
            "command": "uvx",
            "args": ["mcp-server-time", "--local-timezone", "Asia/Tokyo"]
        },
        // Playwright
        // ブラウザの操作。
        "playwright": {
            "command": "bunx",
            "args": ["@playwright/mcp@latest"]
        },
        "browsermcp": {
            "command": "npx",
            "args": ["@browsermcp/mcp@latest"]
        },
        /// Gemini CLI
        "gemini-cli-search": {
            "command": "deno",
            "args": [
                "run",
                "--reload",
                "--allow-run=gemini",
                "https://raw.githubusercontent.com/nabekou29/gemini-cli-mcp-server/main/mod.ts"
            ]
        },
        // Asana
        "asana": {
            "command": "bunx",
            "args": ["mcp-remote", "https://mcp.asana.com/sse"]
        }
    }
}

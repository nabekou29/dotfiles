{
    "$schema": "https://json.schemastore.org/claude-code-settings.json",
    "cleanupPeriodDays": 90,
    "env": {
        "EDITOR": "nvim"
    },
    "permissions": {
        "allow": [
            "Bash(claude-notifier:*)",
            "Bash(find:*)",
            "Bash(gh pr diff:*)",
            "Bash(gh pr view:*)",
            "Bash(git add:*)",
            "Bash(git fetch:*)",
            "Bash(git reset)",
            "Bash(grep:*)",
            "Bash(ls:*)",
            "Bash(mkdir:*)",
            "Bash(mv:*)",
            "Bash(npm install:*)",
            "Bash(npm run lint:*)",
            "Bash(npm run test:*)",
            "Bash(rg:*)",
            "mcp__Figma__get_code",
            "mcp__Figma__get_image",
            "mcp__browsermcp__browser_click",
            "mcp__browsermcp__browser_navigate",
            "mcp__browsermcp__browser_press_key",
            "mcp__browsermcp__browser_screenshot",
            "mcp__browsermcp__browser_type",
            "mcp__deepwiki__ask_question",
            "mcp__deepwiki__read_wiki_structure",
            "mcp__gemini-cli-search__search_web_with_gemini",
            "mcp__github__get_issue",
            "mcp__github__get_issue_comments",
            "mcp__github__get_pull_request",
            "mcp__github__get_pull_request_comments",
            "mcp__github__get_pull_request_diff",
            "mcp__github__get_pull_request_files",
            "mcp__notion__fetch",
            "mcp__notion__search",
            "mcp__playwright__browser_click",
            "mcp__playwright__browser_console_messages",
            "mcp__playwright__browser_navigate",
            "mcp__playwright__browser_navigate_back",
            "mcp__playwright__browser_snapshot",
            "mcp__playwright__browser_tab_select",
            "mcp__playwright__browser_take_screenshot",
            "mcp__playwright__browser_type",
            "mcp__playwright__browser_wait_for",
            "mcp__serena__check_onboarding_performed",
            "mcp__serena__find_file",
            "mcp__serena__find_symbol",
            "mcp__serena__get_symbols_overview",
            "mcp__serena__list_dir",
            "mcp__serena__onboarding",
            "mcp__serena__read_memory",
            "mcp__serena__search_for_pattern",
            "mcp__serena__think_about_collected_information",
            "mcp__serena__think_about_whether_you_are_done",
            "mcp__serena__write_memory",
            "mcp__time__get_current_time"
        ],
        "deny": [
            "Bash(curl:*)",
            "Bash(mongod:*)",
            "Bash(mysql:*)",
            "Bash(psql:*)",
            "Bash(sudo:*)",
            "Bash(wget:*)",
            "Read(**/*key*)",
            "Read(**/*token*)",
            "Read(.env,*)",
            "Read(id_ed25519)",
            "Read(id_rsa)",
            "Write(**/secrets/**)",
            "Write(.env*)"
        ]
    },
    "hooks": {
        "Notification": [
            {
                "matcher": "",
                "hooks": [
                    {
                        "type": "command",
                        "command": "jq -r '\"[\\(.title // \"Notice\")] \\(.message)\"' | xargs -I{} claude-notifier \"$(basename $PWD) {}\""
                    }
                ]
            }
        ],
        "Stop": [
            {
                "matcher": "",
                "hooks": [
                    {
                        "type": "command",
                        "command": "claude-notifier \"$(basename $PWD) プロセスが完了しました！\""
                    }
                ]
            }
        ]
    },
    "enabledPlugins": {
        "code-review@claude-code-plugins": true,
        "example-skills@anthropic-agent-skills": true
    },
    "alwaysThinkingEnabled": true,
    "feedbackSurveyState": {
        "lastShownTime": 1754280246185
    }
}
